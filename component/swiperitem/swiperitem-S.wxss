/* component/swiperitem/swiperitem-S.wxss */
.body {
  width: 100%;
  height: 100%;
}

.title {
  width: 100%;
  height: 126rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 126rpx;
  justify-content: center;
  align-items: center;
  display: flex;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #0B0B0D;
}

.content {
  width: 100%;
  height: auto;
  margin-left: 38rpx;
  margin-right: 38rpx;
}

.item {
  margin-top: 72rpx;
  display: flex;
  flex-direction: row;
  height: 30rpx;
}



.item-middle {
  width: 40rpx;
  height: 1rpx;
}

.item-left {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
 
}

.item-right {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  padding-left: 50rpx;
}

.item .name {
  height: 30rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 30rpx;
}

.item-left .name {
  width: 168rpx;
}

.item-right .name {
  width: 112rpx;
}

.item .img {
  width: 30rpx;
  height: 30rpx;
  margin-left: 27rpx;
}