.anjian {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.anjian-item {
  height: 100rpx;
  width: 90%;
  display: flex;
}

.oval {
  background: #1E1F24;
  display: flex;
  align-items: center;
  flex: 1;
  width: 30%;
  justify-content: center;
}


.anjian-item .left {
  flex: 1;
  margin-left: 38rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.anjian-item .right {
  display: flex;
  align-items: center;
  margin-right: 38rpx;
  height: 100%;
}

.right-icon {
  width: 16rpx;
  height: 28rpx;
  margin-left: 20rpx;
}


.oval-button {
  border: 1px solid #5EA2D7;
  border-radius: 40rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}

.oval-content {
  display: flex;
}

.oval .input {
  width: 60rpx;
}
.oval .input1 {
  width: 80rpx;
}

.oval .input2 {
  width: 80rpx;
}


.vertical-middle {
  width: 10rpx;
}

.oval-content-middle {
  width: 20rpx;
}

.wx-switch-input {
  width: 88rpx !important;
  height: 44rpx !important;
  background: #5EA2D7 !important;
  border: #5EA2D7 !important;
  /* 2018-07-18 重置开关边框颜色 */
}


/*白色样式（false的样式）*/
.wx-switch-input::before {
  width: 88rpx !important;
  height: 44rpx !important;
}

/*绿色样式（true的样式）*/
.wx-switch-input::after {
  width: 88rpx !important;
  height: 44rpx !important;
}

.model-line {
  width: 100%;
  height: 1rpx;
  background: #000000;
}

.modal-box-body {
  background: #2B2D36;
  width: 100%;
}

.dialog-item {
  height: 80rpx;
  width: 100%;
  background: #2B2D36;
  display: flex;
  align-items: center;
  color: #FFFFFF;
}

.dialog-item .checkbox {
  margin-left: 20rpx;
}

.dialog-item-name {
  margin-left: 10rpx;
  color: #FFFFFF;
}

.model-label {
  display: flex;
  align-items: center;
  height: 120rpx;
}

/** 对话框设置 */
.modal-dialog {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
  display: flex;
  flex-direction: column;
  right: 0rpx;
  bottom: 0rpx;
  background: rgba(0, 0, 0, 0.7);
  overflow: hidden;
  align-items: center;
  justify-content: flex-end;
}

.modal-dialog-close{
  width: 64rpx;
  height: 64rpx;
  margin-top: 80rpx;
}

.modal-box {
  width: 80%;
  background: #2B2D36;
  box-shadow: 0 2px 25px 0 rgba(0, 0, 0, 0.06);
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 130rpx;
}

.modal-box-title {
  font-size: 40rpx;
  margin-top: 30rpx;
  color: #FFFFFF;
}

.modal-box-desc {
  font-size: 30rpx;
  color: #999;
  margin-top: 30rpx;
}

.modal-box-input {
  width: 90%;
  margin-top: 30rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-bottom: 30rpx;
  background: #FFFFFF;
  border-radius: 4px;
  border: 1px solid #EEEEEE;
  height: 100rpx;
}

.modal-box-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom-right-radius: 32rpx;
  border-bottom-left-radius: 32rpx;
  width: 100%;
  overflow: hidden;
}

.modal-box-button {
  font-size: 40rpx;
  text-align: center;
  width: 100%;
  height: 100%;
  line-height: 100rpx;
  background-color: #2B2D36;
}

.modal-box-button-hover {
  background-color: #2B2D36;
}

.hover-class{
  background-color: #2B2D36;
}

.model-content {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #FFFFFF;
  justify-content: center;
  align-items: center;
  display: flex;
  margin-top: 47rpx;
  margin-bottom: 47rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  text-align: center;
}