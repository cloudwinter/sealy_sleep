  background: #1E1F24;
  color:#5EA2D7;
  /* border-color: #5A9927; */
}

.dark .button-bg-selected {
  background-color: #131418;
  border:3rpx solid #5EA2D7;
  color: #5EA2D7;
}


.text {
  color: #5EA2D7 ;
  font-size: 28rpx;
}

.inputtext {
  color: #FFFFFF ;
  font-size: 28rpx;
}

.dh-button {
  border: 1px solid #5EA2D7;
  border-radius: 40rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
