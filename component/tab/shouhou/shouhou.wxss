/* component/tab/shouhou/shouhou.wxss */
.dark .shouhou_top {
  margin: 0 auto;
  width: 80%;
  height: 120rpx;
  line-height: 12rpx;
  text-align: center;
  color: white;
}
.shouhou_list{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}
.list_item{
  background-color: #2b2f3e;
  width: 90%;
  height: 200rpx;
  line-height: 200rpx;
  color: white;
  margin-bottom: 40rpx;
  border-radius: 30rpx;
  position: relative;
}
.item_left_title{
  color: #4b505c;
  margin: 0 30rpx;
  font-size: 45rpx;
}
.item_icon{
  position:absolute;
  left:10rpx;
  bottom:10rpx;
}