<!--pages/introduce/introduce.wxml-->
<!--index.wxml-->
<view class="page-{{skin}}">
  <navbar loading="{{navbar.loading}}" show="{{navbar.show}}" color="{{navbar.color}}" background="{{navbar.background}}" title="说明"></navbar>

  <view class="{{skin}}">
    <view class="container">
      <swiper class="swiper" next-margin="140rpx" current-item-id="{{currentItemId}}" previous-margin="140rpx" indicator-dots="true" indicator-color="#2B2F3C" indicator-active-color="#FFFFFF"
        bindchange="swiperChange">
        <block wx:for="{{backClass}}" wx:key="index">
          <swiper-item item-id="{{index}}" data-item-id="{{index}}" bindtap='clickChange'>
            <view class='li'>
              <view class='li1 {{item}} {{currentItemId == index ? "selected" : ""}}'></view>
            </view>
          </swiper-item>
        </block>
      </swiper>
    </view>

  </view>
</view>